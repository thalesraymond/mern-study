{
    "name": "jobify",
    "version": "1.0.0",
    "description": "Jobify - Mern Course",
    "homepage": "https://github.com/thalesraymond/mern-study#readme",
    "bugs": {
        "url": "https://github.com/thalesraymond/mern-study/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thalesraymond/mern-study.git"
    },
    "license": "ISC",
    "author": "",
    "type": "module",
    "main": "./dist/server.js",
    "scripts": {
        "clear-dist": "rm -rf dist/ && rm -rf client/dist",
        "setup-project": "npm run clear-dist && npm i && npm run build && cd client && npm i&& npm run build && cd .. && mkdir -p dist/client && cp -r client/dist dist/client/dist",
        "build": "tsc  && cp package.json package-lock.json dist/",
        "lint": "eslint src --ext .ts",
        "test": "vitest run --coverage",
        "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-report.junit.xml",
        "start": "npm run setup-project && node ./dist/server.js",
        "client": "cd client && npm run dev",
        "dev": "concurrently --kill others-on-fail \"npx tsx --env-file=.env --watch ./src/server.ts\" \"npm run client\""
    },
    "dependencies": {
        "@azure/identity": "^4.13.0",
        "@azure/storage-blob": "^12.29.1",
        "bcryptjs": "^3.0.2",
        "cloudinary": "^2.7.0",
        "concurrently": "^9.2.1",
        "cookie-parser": "^1.4.7",
        "datauri": "^4.1.0",
        "dayjs": "^1.11.13",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^8.0.1",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.18.1",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "nanoid": "^5.1.6",
        "typescript": "^5.1.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/bcryptjs": "^3.0.0",
        "@types/cookie-parser": "^1.4.4",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/nanoid": "^3.0.0",
        "@types/node": "^24.8.1",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "ts-node": "^10.9.1",
        "typescript-eslint": "^8.41.0",
        "vitest": "^3.2.4"
    }
}
